<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pg_tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车商二部: 440701"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:textSize="14dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="本月累计完成:"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/pg_tv_completedMonth"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9,020,824.00"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="本期保费:"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/pg_tv_currentPremium"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8,218,327.00"
            />
    </LinearLayout>

    <LinearLayout

        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="同期保费:"
            android:gravity="center"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/pg_tv_contemporaneousPremium"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8,436,480.00"
            />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="增速:" />
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/pg_tv_growthRate"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-2.59%"
            />
    </LinearLayout>

</LinearLayout>